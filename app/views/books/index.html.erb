<html>
  <heder>
      <h1>books</h1>
 <table>

<thead>
  <tr>

    <th>Title</th>
    <th>Body</th>
  </tr>
</thead>
<tbody>
  <% @books.each do |book| %>
  <tr>
 <td> <%=book.title%></td>
 <td> <%= book.body%></td>
 <td><%= link_to "Show", book_path(book) %>
 <td><%= link_to "Edit", edit_book_path(book) %></td>
 <td><%= link_to "Destroy", book_path(book) %></td>
</td>
 </tr>
  <% end %>
</tbody>


</table>

<h1>New book</h1>
  <%= form_with model: @new_book, local:true do |f| %>
  <h4>タイトル</h4>

  <%= f.text_field :title %>

   <h4>本文</h4>

    <%= f.text_area :body %>

    <br> <%= f.submit 'Create Book' %>

    <% if @new_book.errors.any? %>
  <%= @new_book.errors.count %>件のエラーが発生しました
  <% @new_book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<%= flash[:danger] %>


    <% end %>













</html>